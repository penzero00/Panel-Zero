# pnpm configuration for PanelZero monorepo

# Use strict version resolution
shamefully-hoist=false

# Auto-install peers
auto-install-peers=true

# Symlink dependencies
node-linker=symlink

# Use hardlinks when possible (faster)
hard-link-components=true

# Enable strict peer dependencies
strict-peer-dependencies=false

# Use lockfile
use-lockfile=true

# Package registry
registry=https://registry.npmjs.org/
