{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env", ".env.local", ".env.*.local"],
  "pipeline": {
    "build": {
      "outputs": ["frontend/.next/**", "dist/**", "build/**"],
      "cache": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": ["node_modules/.cache/**"],
      "cache": true
    },
    "type-check": {
      "outputs": ["node_modules/.cache/**"],
      "cache": true
    }
  }
}
