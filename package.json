{
  "name": "panelzero",
  "version": "0.1.0",
  "description": "Role-based multi-agent AI grading system for academic thesis defenses",
  "author": "PanelZero Team",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "turbo build",
    "dev": "concurrently -n \"FRONTEND,BACKEND\" -c \"cyan,magenta\" \"pnpm run frontend:dev\" \"pnpm run backend:dev\"",
    "start": "pnpm frontend:build && concurrently -n \"FRONTEND,BACKEND\" -c \"cyan,magenta\" \"pnpm run frontend:start\" \"pnpm run backend:dev\"",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "frontend:build": "turbo build --filter=panelzero-frontend",
    "frontend:dev": "turbo dev --filter=panelzero-frontend",
    "frontend:start": "turbo start --filter=panelzero-frontend",
    "frontend:lint": "turbo lint --filter=panelzero-frontend",
    "frontend:type-check": "turbo type-check --filter=panelzero-frontend",
    "backend:install": "cd backend && py -m venv venv && venv\\Scripts\\python.exe -m pip install -r requirements.txt",
    "backend:dev": "cd backend && venv\\Scripts\\python.exe main.py"
  },
  "keywords": [
    "ai",
    "grading",
    "thesis",
    "academic",
    "docx",
    "fastapi",
    "nextjs",
    "react"
  ],
  "devDependencies": {
    "concurrently": "^9.2.1",
    "flag": "^5.0.1",
    "turbo": "^1.12.4"
  }
}